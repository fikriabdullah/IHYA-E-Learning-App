<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uploadQuestion">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="184dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"
        app:layout_constraintGuide_begin="162dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="162dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.92"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="162dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="162dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideliner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        app:layout_constraintGuide_begin="162dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"
        app:layout_constraintGuide_begin="162dp" />

    <TextView
        android:id="@+id/tvBab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Bab Quiz : "
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/guidelinel"
        app:layout_constraintTop_toBottomOf="@+id/guidelinet" />

    <EditText
        android:id="@+id/etBabQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:hint="Bab Quiz"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideliner"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toEndOf="@+id/tvBab"
        app:layout_constraintTop_toBottomOf="@+id/guidelinet" />

    <ImageView
        android:id="@+id/imgSelection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="104dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="@id/pilihGambar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/guidelinel"
        app:layout_constraintTop_toBottomOf="@id/guidelinet" />

    <Button
        android:id="@+id/pilihGambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="pickImage"
        android:text="Pilih Gambar"
        app:layout_constraintEnd_toStartOf="@+id/guideliner"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />

    <TextView
        android:id="@+id/tvOpt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:text="Pilihan 1 : "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toTopOf="@id/guidelinet" />

    <EditText
        android:id="@+id/etOpt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="328dp"
        android:gravity="end"
        android:hint="Pilihan 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvOpt1"
        app:layout_constraintTop_toBottomOf="@id/guidelinet" />

    <TextView
        android:id="@+id/tvOpt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="Pilihan 2 : "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toTopOf="@id/guideline1" />

    <TextView
        android:id="@+id/tvPert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:text="Pertanyaan : "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toTopOf="@id/guidelinet" />

    <EditText
        android:id="@+id/etPert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="256dp"
        android:gravity="end"
        android:hint="Pertanyaan"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvPert"
        app:layout_constraintTop_toBottomOf="@id/guidelinet" />

    <EditText
        android:id="@+id/etOpt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:hint="Pilihan 4"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvOpt4"
        app:layout_constraintTop_toBottomOf="@id/etOpt3" />

    <TextView
        android:id="@+id/tvOpt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pilihan 4 : "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toBottomOf="@id/tvOpt3" />

    <EditText
        android:id="@+id/etOpt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:hint="Pilihan 3"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvOpt3"
        app:layout_constraintTop_toBottomOf="@id/etOpt2" />

    <TextView
        android:id="@+id/tvOpt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Pilihan 3 : "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toBottomOf="@id/tvOpt2" />

    <EditText
        android:id="@+id/etOpt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="272dp"
        android:gravity="end"
        android:hint="Pilihan 2"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvOpt2"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <TextView
        android:id="@+id/tvCrOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jawaban Benar: "
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/guidelinel"
        app:layout_constraintTop_toBottomOf="@id/tvOpt4" />

    <EditText
        android:id="@+id/etCrOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="72dp"
        android:gravity="end"
        android:hint="Kunci"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvCrOpt"
        app:layout_constraintTop_toBottomOf="@id/etOpt4"
        app:layout_constraintVertical_bias="0.848" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btUploadQuestion"
        android:text="Upload Question"
        android:onClick="addQuestion"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/guidelinel"
        app:layout_constraintEnd_toStartOf="@id/guideliner"
        app:layout_constraintTop_toBottomOf="@id/tvCrOpt"/>

    <ProgressBar
        android:id="@+id/progressBarUpQ"
        app:layout_constraintTop_toBottomOf="@id/guidelinet"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="83dp" />


</androidx.constraintlayout.widget.ConstraintLayout>